{
  "default_module": "segments.vim.ctrlp",
  "segments": {
    "left": [
      {
        "function": "ctrlp",
        "args": {
          "side": "right"
        }
      },
      {
        "function": "ctrlp",
        "args": {
          "side": "left"
        }
      },
      {
        "type": "string",
        "highlight_groups": ["ctrlp:background", "background"],
        "draw_soft_divider": false,
        "draw_hard_divider": false,
        "width": "auto"
      }
    ]
  }
}
