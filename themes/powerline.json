{
    "dividers": {
        "left": {
            "hard": " ",
            "soft": " "
        },
        "right": {
            "hard": " ",
            "soft": " "
        }
    },
    "spaces": 1,
    "segment_data": {
        "branch": {
            "before": " "
        },
        "cwd": {
            "args": {
                "ellipsis": "⋯"
            }
        },

        "line_current_symbol": {
            "contents": " "
        },

        "powerline.segments.common.uptime": {
            "before": "⇑  "
        },
        "powerline.segments.common.virtualenv": {
            "before": "ⓔ  "
        },
        "powerline.segments.common.hostname": {
            "before": " "
        },

        "powerline.segments.vim.mode": {
            "args": {
                "override": {
                    "n":  "NORMAL",
                    "no": "N·OPER",
                    "v":  "VISUAL",
                    "V":  "V·LINE",
                    "^V": "V·BLCK",
                    "s":  "SELECT",
                    "S":  "S·LINE",
                    "^S": "S·BLCK",
                    "i":  "INSERT",
                    "R":  "REPLACE",
                    "Rv": "V·RPLCE",
                    "c":  "COMMND",
                    "cv": "VIM EX",
                    "ce": "EX",
                    "r":  "PROMPT",
                    "rm": "MORE",
                    "r?": "CONFIRM",
                    "!":  "SHELL"
                }
            }
        },
        "powerline.segments.vim.visual_range": {
            "args": {
                "CTRL_V_text": "{rows} × {vcols}",
                "v_text_oneline": "C:{vcols}",
                "v_text_multiline": "L:{rows}",
                "V_text": "L:{rows}"
            }
        },
        "powerline.segments.vim.readonly_indicator": {
            "args": {
                "text": ""
            }
        },
        "powerline.segments.vim.modified_indicator": {
            "args": {
                "text": "+"
            }
        }
    }
}
